<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#F5FFFA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#ff0000"
                android:text="[비기는] 가위 바위 보!"/>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/paper_q"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="12"
        android:orientation="horizontal"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <RadioButton
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/wrong_2"
                android:drawableStart="@drawable/rock"/>
            <RadioButton
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/wrong_1"
                android:drawableStart="@drawable/scissors"/>
            <RadioButton
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/right_answer"
                android:drawableStart="@drawable/paper"/>
            <!--<RadioButton
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/wrong_3"
                android:text="항산화"
                android:textSize="20dp"></RadioButton>-->


        </RadioGroup>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:id="@+id/next_q"
            android:background="@drawable/btn_green"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="다음"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>





</LinearLayout>